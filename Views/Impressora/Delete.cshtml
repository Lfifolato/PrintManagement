@model PrintManagement.Models.Impressora

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <h1 class="text-danger">Delete</h1>

    <h3>Tem certeza de que deseja excluir?</h3>
    <h3>Impressora</h3>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Serial)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Serial)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Modelo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Modelo.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Filial)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Filial.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Departamento)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Departamento.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ContratoDeImpressora)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ContratoDeImpressora.Tipo)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <button class="btn btn-danger btn-icon-split">
            <span class="icon text-white">
                <i class="fas fa-trash-alt"></i>
            </span>
            <span class="text">Delete</span>
        </button>
        <a class="btn btn-danger btn-icon-split" asp-action="Index">
            <span class="icon text-white">
                <i class="fas fa-arrow-circle-left"></i>
            </span>
            <span class="text text-white">Voltar</span>
        </a>
    </form>

</div>
