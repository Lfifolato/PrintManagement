@model PrintManagement.Models.Impressora

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <h1>Create</h1>

    <h4>Impressora</h4>
    <hr />
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Serial" class="control-label"></label>
                <input asp-for="Serial" class="form-control" />
                <span asp-validation-for="Serial" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdFilial" class="control-label"></label>
                <select asp-for="IdFilial" class="form-control" asp-items="ViewBag.IdFilial"></select>
            </div>
            <div class="form-group">
                <label asp-for="IdModelo" class="control-label"></label>
                <select asp-for="IdModelo" class="form-control" asp-items="ViewBag.IdModelo"></select>
            </div>
            <div class="form-group">
                <label asp-for="IdDepartamento" class="control-label"></label>
                <select asp-for="IdDepartamento" class="form-control" asp-items="ViewBag.IdDepartamento"></select>
            </div>
            <div class="form-group">
                <label asp-for="IdContrato" class="control-label"></label>
                <select asp-for="IdContrato" class="form-control" asp-items="ViewBag.IdContrato"></select>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-danger btn-icon-split">
                    <span class="icon text-white">
                        <i class="far fa-save"></i>
                    </span>
                    <span class="text">Salvar</span>
                </button>
                <a class="btn btn-danger btn-icon-split" asp-action="Index">
                    <span class="icon text-white">
                        <i class="fas fa-arrow-circle-left"></i>
                    </span>
                    <span class="text text-white">Voltar</span>
                </a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
