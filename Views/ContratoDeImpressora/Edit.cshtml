@model PrintManagement.Models.ContratoDeImpressora

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Editar</h1>

<h4>Contrato De Impressora</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Tipo" class="control-label"></label>
                <input asp-for="Tipo" class="form-control" />
                <span asp-validation-for="Tipo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdFornecedor" class="control-label"></label>
                <select asp-for="IdFornecedor" class="form-control" asp-items="ViewBag.Idfornecedor"></select>
                <span asp-validation-for="IdFornecedor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Franquia" class="control-label"></label>
                <input asp-for="Franquia" class="form-control" />
                <span asp-validation-for="Franquia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ValorContratado" class="control-label"></label>
                <input asp-for="ValorContratado" class="form-control" />
                <span asp-validation-for="ValorContratado" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ValorExcedente" class="control-label"></label>
                <input asp-for="ValorExcedente" class="form-control" />
                <span asp-validation-for="ValorExcedente" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Vigencia" class="control-label"></label>
                <input asp-for="Vigencia" class="form-control" />
                <span asp-validation-for="Vigencia" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-danger btn-icon-split">
                <span class="icon text-white">
                    <i class="far fa-save"></i>
                </span>
                <span class="text">Salvar</span>
            </button>
            <a class="btn btn-danger btn-icon-split" asp-action="Index">
                <span class="icon text-white">
                    <i class="fas fa-arrow-circle-left"></i>
                </span>
                <span class="text text-white">Voltar</span>
            </a>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
