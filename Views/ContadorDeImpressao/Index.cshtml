@model IEnumerable<PrintManagement.Models.ContadorDeImpressao>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container-fluid">

    <h1 class="h3 mb-2 text-gray-800">Contador De Impressão</h1>
    <p class="mb-4">Listagem  De Contador</p>

    <p>
        <a class="btn btn-danger btn-icon-split" asp-action="Create">
            <span class="icon text-white">
                <i class="fas fa-plus-circle"></i>
            </span>
            <span class="text text-white">Adicionar</span>
        </a>


        <div class="table">
            <table class="table table-bordered table-hover" id="sisDataTable" width="100%">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Impressora):
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Quantidade)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Departamento):
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.DataLeitura)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.NomeUsuario)
                        </th>
                        <th>
                            Ação:
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Impressora.Nome)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Quantidade)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Departamento.Nome)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DataLeitura)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.NomeUsuario)
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.Id"><i class="fas fa-pencil-alt text-danger"></i></a> |
                                <a asp-action="Details" asp-route-id="@item.Id"><i class="fas fa-search text-danger"></i></a> |
                                <a asp-action="Delete" asp-route-id="@item.Id"><i class="fas fa-trash-alt text-danger"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </p>
</div>